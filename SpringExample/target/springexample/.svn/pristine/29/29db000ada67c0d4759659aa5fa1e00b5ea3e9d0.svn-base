						url : 'picUIS.do?method=addRecord',//请求的url地址
						method:'POST',//请求方式
						success:function(form,action){//加载成功的处理函数
							win.hide();
							var failcause = action.result.cause;
							Ext.MessageBox.show({
					           title: '提示',
					           msg: '操作已成功！<br><br><br>' + failcause , 
					           buttons: Ext.MessageBox.OK,
