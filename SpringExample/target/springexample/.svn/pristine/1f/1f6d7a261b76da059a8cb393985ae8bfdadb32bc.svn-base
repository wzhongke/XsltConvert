<%@ page contentType="text/html; charset=GBK" %>

<%@ page import="com.sleepboy.jpassport.idp.util.Configuration;"%>

<%
response.setHeader("Cache-Control","no-cache"); //Forces caches to obtain a new copy of the page from the origin server
response.setHeader("Cache-Control","no-store"); //Directs caches not to store the page under any circumstance
response.setDateHeader("Expires", 0); //Causes the proxy cache to see the page as "stale"
response.setHeader("Pragma","no-cache"); //HTTP 1.0 backward compatibility

Cookie cookie = new Cookie("jpassport-sp", null);
cookie.setMaxAge(0);
cookie.setPath(Configuration.getBasePath(request));

response.addCookie(cookie);

String webUrl = "http://"+request.getServerName()+":"+request.getServerPort()+"/";
//response.sendRedirect("https://passport.sohu-rd.com/logout.jsp?url=" + request.getRequestURL().substring(0, request.getRequestURL().lastIndexOf("/")));
response.sendRedirect("https://passport.sogou-inc.com/logout.jsp?url="+webUrl+"index.jsp");
%>