			}
    	
			Ext.MessageBox.show({
	                title: '预览效果',
	                msg: message ,
	                buttons: Ext.MessageBox.YESNO,
	                icon: Ext.MessageBox.QUESTION,
	                fn: function(btnId){
	                    if(btnId == 'yes'){
