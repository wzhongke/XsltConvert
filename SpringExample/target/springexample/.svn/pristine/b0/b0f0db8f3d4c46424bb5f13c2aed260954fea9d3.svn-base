	<!--检验session存储的用户信息是否过期过滤器 -->
  	<filter>
		<filter-name>sessionCheckFilter</filter-name>
		<filter-class>com.sohu.frontweb.author.filter.CheckSessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sessionCheckFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<!--准入控制过滤器 -->
	<filter>
		<filter-name>authorFilter</filter-name>
		<filter-class>com.sohu.frontweb.author.filter.AuthorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>authorFilter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
